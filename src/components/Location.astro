---
import { siteConfig, getWhatsAppUrl } from '../data/site';
---

<section id="kontak" class="py-16 md:py-24 bg-white dark:bg-background-dark">
  <div class="px-4 md:px-10 lg:px-40 max-w-[1440px] mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Contact Info -->
      <div class="flex flex-col gap-8">
        <div>
          <span class="text-primary font-bold tracking-wider uppercase text-sm">Lokasi Kami</span>
          <h2 class="text-text-primary dark:text-white text-3xl md:text-4xl font-bold mt-2">Kunjungi Kantor NASYA</h2>
          <p class="text-gray-500 dark:text-gray-400 mt-4 text-lg">Konsultasikan kebutuhan belajar mengemudi Anda langsung dengan staff kami.</p>
        </div>
        
        <div class="flex flex-col gap-6">
          <!-- Address -->
          <div class="flex gap-4 items-start">
            <div class="size-12 rounded-lg bg-gray-100 dark:bg-gray-800 flex items-center justify-center shrink-0">
              <span class="material-symbols-outlined text-primary">location_on</span>
            </div>
            <div>
              <h3 class="text-text-primary dark:text-white font-bold text-lg">Alamat</h3>
              <p class="text-gray-500 dark:text-gray-400">{siteConfig.address}</p>
            </div>
          </div>
          
          <!-- Phone -->
          <div class="flex gap-4 items-start">
            <div class="size-12 rounded-lg bg-gray-100 dark:bg-gray-800 flex items-center justify-center shrink-0">
              <span class="material-symbols-outlined text-primary">call</span>
            </div>
            <div>
              <h3 class="text-text-primary dark:text-white font-bold text-lg">Telepon / WhatsApp</h3>
              <p class="text-gray-500 dark:text-gray-400">{siteConfig.phone}</p>
              <p class="text-sm text-gray-400 mt-1">{siteConfig.operatingHours}</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Map -->
      <div class="h-[400px] w-full bg-gray-200 dark:bg-gray-800 rounded-2xl overflow-hidden relative shadow-lg">
        <div 
          class="absolute inset-0 bg-cover bg-center"
          style={`background-image: url("${siteConfig.mapImage}");`}
        ></div>
        <div class="absolute bottom-4 left-4 right-4 bg-white dark:bg-card-dark p-4 rounded-xl shadow-lg border border-gray-100 dark:border-gray-700 flex items-center justify-between">
          <div class="flex flex-col">
            <span class="font-bold text-sm text-text-primary dark:text-white">NASYA Driving School</span>
            <span class="text-xs text-gray-500">4.9 (1,234 Reviews)</span>
          </div>
          <a 
            href={siteConfig.mapUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-blue-600 text-white text-xs font-bold px-3 py-2 rounded-lg flex items-center gap-1 hover:bg-blue-700 transition-colors"
          >
            <span class="material-symbols-outlined text-sm">directions</span> Rute
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
