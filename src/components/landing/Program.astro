---
const theoryItems = [
  "Peraturan lalu lintas dan rambu jalan",
  "Teknik mengemudi yang aman",
  "Persiapan ujian SIM praktik",
  "Tips dan trik dari instruktur"
];

const practicalItems = [
  "Mengemudi di kota dan jalan raya",
  "Parkir dan manuver mundur",
  "Pengereman darurat dan kontrol",
  "Latihan langsung dengan instruktur"
];

const whatsappLink = "https://wa.me/6281234567890?text=Halo%20NASYA,%20saya%20ingin%20mendaftar%20kursus%20mengemudi";
---

<section class="py-16 sm:py-20 lg:py-24 bg-accent-cream/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-10 sm:mb-16 reveal">
      <span class="section-label">Program Lengkap</span>
      <h2 class="mt-3 section-title">
        Apa yang Akan<br /><span class="text-primary">Anda Pelajari</span>
      </h2>
      <p class="mt-4 section-subtitle mx-auto">
        Program kami menggabungkan teori dan praktik, memberikan semua skill untuk menjadi pengemudi yang percaya diri
      </p>
      
      <div class="mt-8">
        <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-primary">
          <span>Daftar Sekarang</span>
          <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
    
    <!-- Program Cards -->
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Theory Card -->
      <div class="bg-white rounded-[32px] overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300 reveal-left stagger-1">
        <div class="aspect-[4/3] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1434030216411-0b793f4b4173?w=800&h=600&fit=crop"
            alt="Pelajaran teori"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
        <div class="p-8">
          <h3 class="text-2xl font-bold text-text-primary mb-6">Pelajaran Teori</h3>
          <ul class="space-y-4">
            {theoryItems.map((item) => (
              <li class="flex items-center gap-3">
                <div class="size-6 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="size-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="text-text-secondary">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Practical Card -->
      <div class="bg-white rounded-[32px] overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300 reveal-right stagger-2">
        <div class="aspect-[4/3] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1580273916550-e323be2ae537?w=800&h=600&fit=crop"
            alt="Pelajaran praktik"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
        <div class="p-8">
          <h3 class="text-2xl font-bold text-text-primary mb-6">Pelajaran Praktik</h3>
          <ul class="space-y-4">
            {practicalItems.map((item) => (
              <li class="flex items-center gap-3">
                <div class="size-6 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="size-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="text-text-secondary">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
