---
const reviews = [
  {
    name: "Andi Pratama",
    role: "Siswa NASYA",
    quote: "Belajar di NASYA sangat menyenangkan! Instrukturnya sabar dan metodenya mudah dipahami. Saya berhasil dapat SIM dalam waktu singkat.",
    image: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=200&h=200&fit=crop&crop=face"
  },
  {
    name: "Siti Nurhaliza",
    role: "Siswa NASYA",
    quote: "Awalnya saya sangat takut nyetir, tapi instruktur NASYA sangat sabar mengajari saya. Sekarang saya sudah percaya diri di jalan raya!",
    image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=200&h=200&fit=crop&crop=face"
  },
  {
    name: "Budi Santoso",
    role: "Siswa NASYA",
    quote: "Layanan antar-jemput sangat membantu. Tidak perlu repot ke tempat kursus. Instrukturnya profesional dan ramah. Recommended!",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=200&h=200&fit=crop&crop=face"
  }
];
---

<section class="py-16 sm:py-20 lg:py-24 bg-accent-cream/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-10 sm:mb-16 reveal">
      <span class="section-label">Testimoni Siswa</span>
      <h2 class="mt-3 section-title">
        Apa Kata<br /><span class="text-primary">Siswa Kami</span>
      </h2>
      <p class="mt-4 section-subtitle mx-auto">
        Dengarkan pengalaman langsung dari siswa yang telah belajar dan berhasil mendapatkan SIM di NASYA
      </p>
    </div>
    
    <!-- Reviews Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {reviews.map((review, index) => (
        <div class={`bg-white rounded-[32px] p-8 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-2 reveal stagger-${index + 1}`}>
          <!-- Avatar and Info -->
          <div class="flex items-center gap-4 mb-6">
            <div class="size-14 rounded-full overflow-hidden relative bg-gray-100">
              <div class="absolute inset-0 shimmer-bg"></div>
              <img 
                src={review.image}
                alt={review.name}
                loading="lazy"
                decoding="async"
                class="size-14 rounded-full object-cover opacity-0 transition-opacity duration-300"
                onload="this.classList.remove('opacity-0'); this.previousElementSibling.style.display='none';"
              />
            </div>
            <div>
              <h4 class="font-semibold text-text-primary">{review.name}</h4>
              <p class="text-sm text-text-secondary">{review.role}</p>
            </div>
          </div>
          
          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {[1,2,3,4,5].map(() => (
              <svg class="size-5 text-primary fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          
          <!-- Quote -->
          <p class="text-text-secondary italic">
            "{review.quote}"
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .shimmer-bg {
    background: linear-gradient(90deg, #f0f0f0 0%, #e0e0e0 50%, #f0f0f0 100%);
    background-size: 200% 100%;
    animation: shimmer 1.5s ease-in-out infinite;
  }
  
  @keyframes shimmer {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .shimmer-bg { animation: none; background: #f0f0f0; }
  }
</style>
