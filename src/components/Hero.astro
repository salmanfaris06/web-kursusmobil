---
import { siteConfig, getWhatsAppUrl } from '../data/site';
---

<section class="relative w-full" id="beranda">
  <div class="px-4 md:px-10 lg:px-40 py-5 max-w-[1440px] mx-auto">
    <div 
      class="rounded-2xl overflow-hidden relative min-h-[560px] flex flex-col justify-end p-6 md:p-12 lg:p-16 bg-cover bg-center"
      style={`background-image: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.2) 60%, rgba(0, 0, 0, 0) 100%), url("${siteConfig.heroImage}");`}
    >
      <div class="relative z-10 max-w-2xl flex flex-col gap-4 animate-fade-in-up">
        <!-- Badge -->
        <span class="inline-flex w-fit items-center gap-2 rounded-full bg-white/20 backdrop-blur-sm px-3 py-1 text-xs font-medium text-white ring-1 ring-inset ring-white/30">
          <span class="material-symbols-outlined text-[16px] fill-1">verified</span>
          Resmi & Terpercaya
        </span>
        
        <!-- Headline -->
        <h1 class="text-white text-4xl md:text-5xl lg:text-6xl font-black leading-tight tracking-tight drop-shadow-sm">
          Kursus Mengemudi NASYA Jambi
        </h1>
        
        <!-- Subheadline -->
        <p class="text-gray-200 text-lg md:text-xl font-normal leading-relaxed max-w-xl">
          {siteConfig.description}
        </p>
        
        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 mt-4">
          <a 
            href="#harga"
            class="flex h-12 cursor-pointer items-center justify-center rounded-lg bg-primary hover:bg-primary-dark transition-all px-8 text-white text-base font-bold shadow-lg shadow-primary/30"
          >
            Daftar NASYA Sekarang
          </a>
          <a 
            href="#fitur"
            class="flex h-12 cursor-pointer items-center justify-center rounded-lg bg-white/10 hover:bg-white/20 backdrop-blur-md border border-white/30 px-8 text-white text-base font-bold transition-all"
          >
            Pelajari Lebih Lanjut
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
